    <!-- Base application theme performer. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGreen</item>
        <item name="colorPrimaryDark">@color/colorGreenDark</item>
        <item name="colorAccent">@color/colorGreenLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style caixa Edit text Cerca -->
    <style name="AppTheme.editTextStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGreen</item>
        <item name="colorControlActivated">@color/colorGreenDark</item>
        <item name="android:textColorHighlight">@color/colorGreenLight</item>
    </style>

</resources>
